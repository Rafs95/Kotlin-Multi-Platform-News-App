<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen16">

    <ImageView
        android:id="@+id/ivNews"
        android:layout_width="@dimen/listImageSizeStandard"
        android:layout_height="@dimen/listImageSizeStandard"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitleNews"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen7"
        android:maxLines="2"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivNews"
        app:layout_constraintTop_toTopOf="@id/ivNews"
        tools:text="korona Virus is spreading" />

    <TextView
        android:id="@+id/tvAuthorNews"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen7"
        android:layout_marginTop="@dimen/dimen7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivNews"
        app:layout_constraintTop_toBottomOf="@id/tvTitleNews"
        tools:text="Anggit Prayogo" />

</androidx.constraintlayout.widget.ConstraintLayout>